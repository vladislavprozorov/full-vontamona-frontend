{
  "$schema": "https://biomejs.dev/schemas/2.4.3/schema.json",

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "always"
    }
  },

  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },

  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },

  "linter": {
    "enabled": false
  }
}
